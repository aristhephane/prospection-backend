{% extends 'base.html.twig' %}

{% block title %}Prospection Récente{% endblock %}

{% block body %}
    <h1>Fiches de Prospection Récentes</h1>

    {% if fichesRecents is empty %}
        <p>Aucune fiche de prospection récente trouvée.</p>
    {% else %}
        <ul>
            {% for fiche in fichesRecents %}
                <li>
                    <strong>{{ fiche.nom }}</strong> - Créée le {{ fiche.dateCreation|date('d/m/Y') }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
